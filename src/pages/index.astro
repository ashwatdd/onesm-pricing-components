---
import DefaultLayout from '@/layouts/DefaultLayout.astro'
import Header from '@/components/base/Header/Header.astro'
import HeaderStart from '@/components/base/Header/HeaderStart.astro'
import HeaderEnd from '@/components/base/Header/HeaderEnd.astro'
import HeaderTitle from '@/components/base/Header/HeaderTitle.astro'
import AppIcon from '@/components/ui/AppIcon.astro'
import AppNavCard from '@/components/AppNavCard.astro'
import PageHeadingGroup from '@/components/base/PageHeading/PageHeadingGroup.astro'
import PageHeadingTitle from '@/components/base/PageHeading/PageHeadingTitle.astro'
import PageHeadingSubtitle from '@/components/base/PageHeading/PageHeadingSubtitle.astro'
import { type AppIcons } from '../components/ui/appIcons'

const pageTitle = 'App Launcher'

const apps: {
  title: string
  icon: AppIcons,
  color: `bg-${string}-500`
  path: `/${string}`
}[] = [
  {
    title: 'Pricing Model',
    icon: 'calculator',
    color: 'bg-violet-500',
    path: '/pricing',
  },
]
---
<DefaultLayout
  metaTitle={pageTitle}
  metaDescription="Select an app to get started"
  className="bg-linear-to-b from-neutral-50 to-cyan-50/70"
>
  <Header>
    <HeaderStart>
      <AppIcon icon="pyramid" size="sm" color="bg-cyan-500" />
      <HeaderTitle>{pageTitle}</HeaderTitle>
    </HeaderStart>
    <HeaderEnd>What will you do today?</HeaderEnd>
  </Header>
  <main class="container mx-auto px-6 py-8">
    <PageHeadingGroup>
      <PageHeadingTitle>Home</PageHeadingTitle>
      <PageHeadingSubtitle>Select an application to get started</PageHeadingSubtitle>
    </PageHeadingGroup>

    <article class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-6">
      {apps.map(x =>
        <a href={x.path}>
          <AppNavCard title={x.title} icon={x.icon} color={x.color} />
        </a>
      )}
    </article>
  </main>
</DefaultLayout>
